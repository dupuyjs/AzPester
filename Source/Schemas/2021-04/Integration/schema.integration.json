{
    "id": "schema.integration",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Integration",
    "description": "Schema for Integration Section",
    "definitions": {
        "integration": {
            "type": "object",
            "description": "",
            "properties": {
                "runners": {
                    "type": "object",
                    "additionalProperties": {
                        "$ref": "#/definitions/runner"
                    },
                    "description": "(Optional) List of all runners."
                },
                "resourceAccessChecks": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/resourceAccessCheck"
                    }
                }
            },
            "additionalProperties": false
        },
        "resourceAccessCheck":{
            "type": "object",
            "required": [
                "targetHost",
                "targetPort",
                "runFrom"
            ],
            "properties":{
                "targetHost": {
                    "type": "string",
                    "description": "(Required) The host of the target resource to check access." 
                },
                "targetPort": {
                    "type": "number",
                    "description": "(Required) The port of the target resource to check access." 
                },
                "runFrom": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "additionalProperties": false
        },
        "runner": {
            "type": "object",
            "description": "(Required) The source subnet from where the resource access check must be done." ,
            "required": [
                "vnet",
                "subnet",
                "sku"
            ],
            "properties": {
                "vnet": {
                    "type": "string",
                    "description": "(Required) The name of the source virtual network." 
                },
                "subnet": {
                    "type": "string",
                    "description": "(Required) The name of the source subnet." 
                },
                "sku": {
                    "type": "string",
                    "description": "(Required) The SKU to use for the runner." 
                },
                "context": {
                    "type": "string",
                    "description": "(Optional) The name of the Azure context to use to resolve the subnet." 
                }
            },
            "additionalProperties": false
        }
    }
}