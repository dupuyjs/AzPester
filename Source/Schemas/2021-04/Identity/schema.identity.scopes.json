{
    "id": "schema.identity.scopes",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Scopes",
    "description": "Schema for Scopes Section",
    "definitions": {
        "scope": {
            "type": "object",
            "required": [
                "displayName",
                "scope"
            ],
            "properties": {
                "displayName": {
                    "type": "string",
                    "description": "(Required) The scope name. Used only for display in test results."
                },
                "scope": {
                    "type": "string",
                    "description": "(Required) The scope definition of the role assignment. In the format of relative URI."
                }
            },
            "additionalProperties": false
        }
    }
}